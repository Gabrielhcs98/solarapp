<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main">

    <!-- Imagem de plano de fundo com gradiente -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_gradient"
        android:scaleType="centerCrop"/>

    <!-- Conteúdo da interface do usuário -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <!-- LinearLayout pai para o texto -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom">

            <!-- Cabeçalho -->
            <TextView
                android:id="@+id/textViewHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SolarApp"
                android:textSize="55sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginBottom="45dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Olá, bem-vindo de volta!"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:layout_marginBottom="45dp"/>

            <!-- Campos de entrada -->
            <EditText
                android:id="@+id/editTextLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Localização (latitude, longitude)"
                android:inputType="text"
                android:background="@drawable/edittext_background"
                android:textColor="@android:color/black"
                android:textColorHint="#A0A0A0"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/editTextTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tempo (ex: YYYY-MM-DD)"
                android:inputType="text"
                android:background="@drawable/edittext_background"
                android:textColor="@android:color/black"
                android:textColorHint="#A0A0A0"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <!-- Botão -->
            <Button
                android:id="@+id/buttonSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estimar Geração Solar"
                android:backgroundTint="#214573"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_horizontal"
                android:paddingEnd="24dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginTop="32dp" />

            <!-- Resultados -->
            <TextView
                android:id="@+id/textViewResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Resultados"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
